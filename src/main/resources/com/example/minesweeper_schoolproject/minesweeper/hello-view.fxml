<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.minesweeper_schoolproject.minesweeper.HelloController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #eee; -fx-padding: 5; -fx-border-color: #bbb;">

        <ComboBox fx:id="myComboBox" prefWidth="200">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="EASY" />
                    <String fx:value="MEDIUM" />
                    <String fx:value="HARD" />
                </FXCollections>
            </items>
        </ComboBox>

        <Label fx:id="timerLabel" text="Idő: 0" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        <Label fx:id="flagLabel" text="Zászló: 0" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
    </HBox>

    <GridPane fx:id="gameGrid" alignment="CENTER" hgap="1" vgap="1" VBox.vgrow="ALWAYS" />
</VBox>